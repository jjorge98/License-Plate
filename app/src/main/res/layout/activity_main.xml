<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/loginStamperMain"
        android:layout_width="189dp"
        android:layout_height="46dp"
        android:background="#850f0d"
        android:text="Área Estampador"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestLicenseMain" />

    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="295dp"
        android:layout_height="207dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/requestLicenseMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/requestLicenseMain"
        android:layout_width="189dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:background="#850f0d"
        android:text="Solicitação de placa"
        app:layout_constraintBottom_toTopOf="@+id/loginStamperMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoMain" />

</androidx.constraintlayout.widget.ConstraintLayout>