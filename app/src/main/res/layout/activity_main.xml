<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".views.MainActivity">

    <Button
        android:id="@+id/loginStamperMain"
        android:layout_width="189dp"
        android:layout_height="46dp"
        android:background="@drawable/botoes"
        android:text="Área Estampador"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="295dp"
        android:layout_height="207dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/requestLicenseMain"
        android:layout_width="189dp"
        android:layout_height="46dp"
        android:background="@drawable/botoes"
        android:text="Solicitação de placa"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toTopOf="@+id/requestLicenseMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoMain"
        app:srcCompat="@drawable/icone_solicitante" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toTopOf="@+id/loginStamperMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestLicenseMain"
        app:srcCompat="@drawable/icone_estampador" />

    <ImageView
        android:id="@+id/helpMain"
        android:layout_width="83dp"
        android:layout_height="124dp"
        app:layout_constraintBottom_toBottomOf="@+id/requestLicenseMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/requestLicenseMain"
        app:layout_constraintTop_toTopOf="@+id/requestLicenseMain"
        app:srcCompat="@drawable/help" />

</androidx.constraintlayout.widget.ConstraintLayout>